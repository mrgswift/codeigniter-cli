{
    "name": "mrgswift/codeigniter-cli",
    "description": "A command-line tool for CodeIgniter 3.0",
    "keywords": [
        "cli",
        "command",
        "command line",
        "codeigniter"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew Guillot",
            "homepage": "https://github.com/mrgswift"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "aura/cli-kernel": "~2.0",
        "monolog/monolog": "2.3.5",
        "psr/log": "1.1.4"
    },
    "autoload": {
        "psr-4": {
            "Kenjis\\CodeIgniter_Cli\\": "src/",
            "Kenjis\\CodeIgniter_Cli\\_Config\\": "config/"
        }
    },
    "extra": {
        "aura": {
            "type": "project",
            "config": {
                "common": "Kenjis\\CodeIgniter_Cli\\_Config\\Common",
                "dev": "Kenjis\\CodeIgniter_Cli\\_Config\\Dev",
                "test": "Kenjis\\CodeIgniter_Cli\\_Config\\Test",
                "prod": "Kenjis\\CodeIgniter_Cli\\_Config\\Prod"
            }
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "1.1.*"
    }
}
